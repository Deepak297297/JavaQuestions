public class Main{
	public static void printSum(int i, int n, int sum){
	    if(i==n){
	        sum += i;
	        System.out.println(sum);
	        return;
	    }
	    sum += i;
	    printSum(i+1, n, sum);
	}
	 
	
    public static void main(String[] args){
        printSum(1, 5, 0);
    }
}

output:
15

// here i = current number, n= final number, sum = total sum till now;
